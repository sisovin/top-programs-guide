# Production Environment Variables
# Copy this file to .env.production and fill in the values

# === Database ===
DATABASE_URL="postgresql://user:password@host:port/database?schema=public"

# === JWT Authentication ===
JWT_SECRET="your-super-secret-jwt-key-minimum-32-characters-long"
JWT_EXPIRES_IN="24h"
REFRESH_TOKEN_EXPIRES_IN="7d"

# === Admin Registration ===
ADMIN_REGISTRATION_SECRET="your-admin-registration-secret-key"

# === CORS Configuration ===
# Comma-separated list of allowed origins
ALLOWED_ORIGINS="https://www.top-programs-guide.com,https://top-programs-guide.com"

# === Application Settings ===
NODE_ENV="production"
PORT=3001

# === Monitoring (Optional) ===
# Sentry DSN for error tracking
SENTRY_DSN=""

# === Rate Limiting (Optional) ===
RATE_LIMIT_WINDOW_MS=900000  # 15 minutes
RATE_LIMIT_MAX_REQUESTS=100

# === Logging ===
LOG_LEVEL="info"  # error, warn, info, debug
LOG_FORMAT="json"  # json or simple

# === Security ===
# Session secret (if using sessions)
SESSION_SECRET="your-session-secret-key"

# === Email (Optional - for future features) ===
SMTP_HOST=""
SMTP_PORT=587
SMTP_USER=""
SMTP_PASS=""
EMAIL_FROM="noreply@top-programs-guide.com"

# === External Services (Optional) ===
# Redis for caching/sessions
REDIS_URL=""

# AWS S3 for file uploads
AWS_ACCESS_KEY_ID=""
AWS_SECRET_ACCESS_KEY=""
AWS_REGION=""
AWS_S3_BUCKET=""
